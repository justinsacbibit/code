    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "preserve",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "sourceMap": true
  },
  "references": [
    {
      "path": "./packages/reusable"
    }
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}